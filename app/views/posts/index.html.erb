<h1>Forum</h1>

<table class="center">
  <tr>
    <th>Username</th>
    <th>Title</th>
    <th>Message</th>
    <th>Discussion</th>
    <th>Date</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.username %></td>
    <td class="post_title"><%= link_to post.title, post %></td>
    <td><%= post.message %></td>
    <td><%= link_to "Comments(#{commentsCountPost(post.id)})", controller: :comments, post_id: post.id, c_type: 'post' %> </td>
    <td><%= post.updated_at.strftime("%m/%d") %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
