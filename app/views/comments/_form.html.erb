<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li><br/>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @header_type == 'post' %>
    <div class="field">
      <%#= f.label :c_type %>
      <%= f.hidden_field :c_type, value: 'post' %>
    </div>
    <div class="field">
      <%#= f.label :post_id %><br />
      <%= f.hidden_field :post_id %>
    </div>
  <% else %>
    <div class="field">
      <%#= f.label :c_type %>
      <%= f.hidden_field :c_type, value: 'song' %>
    </div>
    <div class="field">
      <%#= f.label :song_id %><br />
      <%= f.hidden_field :song_id %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </div>

  <div class="actions">
    <%= link_to 'Cancel', :back %>
    <%= f.submit "Submit" %>
  </div>

<% end %>
