<h1>Performers</h1>

<table class="center">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Preferred</th>
    <th>Instruments</th>
    <th>Vocals</th>
    <th colspan=4>Options</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><a href="mailto:<%= user.email %>"><%=user.email %></a></td>
    <td><%= user.phone %></td>
    <td><%= user.preferred_contact_channel %></td>
    <td><%= user.instruments %></td>
    <td><%= user.vocals %></td>
    <td><%= link_to 'Biography', action: 'bios', id: user.id %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add Performer', new_user_path %>
